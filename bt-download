. ./config.bash
BIN="python $BASEDIR/search-cli.py"


help(){
    echo "HELP"
    echo "bt-download SITECODE id01 id02 id03 id04 ...."
    echo "    SITECODE is BTD, ICN, TNT or KCK"
    echo "    id01 id02... are id of bt-search result"
    echo "if you want download specific format (magnet, torrent) edit TYPE variable on script file"
    echo "type are: mag|tor|torcache|zoink"
    echo "mag=magnet"
    echo "tor=torrent"
    echo "torcache=get torrent by searching hashfile on torcache site"
    echo "zoink=get torrent by searching hashfile on zoink site"
}

if [ ! -z "$1" ]
then
    case $1 in
	BTD)
	    for i in `echo $@ | sed 's/BTD //'`
	    do
		$BIN dw "BTD-$i"
	    done
	    ;;
	ICN)
	    for i in `echo $@ | sed 's/ICN //'`
	    do
		$BIN dw  "ICN-$i"
	    done
	    ;;
	TNT)
	    for i in `echo $@ | sed 's/TNT //'`
	    do
		$BIN dw "TNT-$i"
	    done
	    ;;
	KCK)
	    for i in `echo $@ | sed 's/KCK //'`
	    do
		$BIN dw  "KCK-$i"
	    done
	    ;;
    esac
else
    help
fi
